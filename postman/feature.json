		{
			"name": "Редактирование созданного комментария",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const main = async () => {\r",
							"    const api = new API(pm);\r",
							"    const rnd = new RandomUtils();\r",
							"\r",
							"    try {\r",
							"        const user = await api.addUser(rnd.getUser());\r",
							"        const category = await api.addCategory(rnd.getCategory());\r",
							"        const event = await api.addEvent(user.id, rnd.getEvent(category.id));\r",
							"        pm.collectionVariables.set(\"eid\", event.id)\r",
							"        const commentator = await api.addUser(rnd.getUser());\r",
							"        pm.collectionVariables.set(\"uid\", commentator.id)\r",
							"    \r",
							"        const comment = await api.addComment(commentator.id, event.id, rnd.getComment());\r",
							"        pm.collectionVariables.set(\"commId\", comment.id);\r",
							" \r",
							"        let newUpdatedCommentJson = rnd.getComment();\r",
							"        pm.collectionVariables.set(\"response\", comment);\r",
							"        pm.collectionVariables.set(\"newCommentText\", newUpdatedCommentJson.text); \r",
							"\r",
							"        pm.request.body.update({\r",
							"            mode: 'raw',\r",
							"            raw: newUpdatedCommentJson,\r",
							"            options: { raw: { language: 'json' } }\r",
							"        });\r",
							"\r",
							"    } catch(err) {\r",
							"        console.error(\"Ошибка при подготовке тестовых данных.\", err);\r",
							"    }\r",
							"};\r",
							"\r",
							"const interval = setInterval(() => {}, 1000);\r",
							"\r",
							"setTimeout(async () => \r",
							"    {\r",
							"        try {\r",
							"            await main();\r",
							"        } catch (e) {\r",
							"            console.error(e);\r",
							"        } finally {\r",
							"            clearInterval(interval);\r",
							"        }\r",
							"    },  \r",
							"    100 \r",
							");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Ответ должен содержать код статуса 200 и данные в формате json\", function () {\r",
							"    pm.response.to.be.ok;    \r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"\r",
							"const target = pm.response.json();\r",
							"const source = pm.collectionVariables.get('response');\r",
							"console.log(source);\r",
							"console.log(target);\r",
							"\r",
							"pm.test(\"Комментарий должен содержать поля: id, author, event, text\", function () {\r",
							"    pm.expect(target).to.have.property('id');\r",
							"    pm.expect(target).to.have.property('author');\r",
							"    pm.expect(target).to.have.property('event');\r",
							"    pm.expect(target).to.have.property('text');\r",
							"    pm.expect(target).to.have.property('publicationDate');\r",
							"    pm.expect(target).to.have.property('modifyDate');\r",
							"});\r",
							"\r",
							"pm.test(\"Данные в ответе должны соответствовать данным в запросе, ID\", function () {\r",
							"    pm.expect(source.id).to.not.be.null;\r",
							"    pm.expect(source.id).equal(target.id, 'ID комментария исходника должен соответствовать ID комментария в событии');\r",
							"});\r",
							"\r",
							"pm.test(\"Данные в ответе должны соответствовать данным в запросе ID пользователя\", function () {\r",
							"    pm.expect(target.author).to.have.property('id');\r",
							"    pm.expect(target.author.name).equal(source.author.name, 'ID пользователя должен соответствовать ID автора в комментарии');\r",
							"});\r",
							"\r",
							"pm.test(\"Данные в ответе должны соответствовать данным в запросе ID события\", function () {\r",
							"    pm.expect(target.event.title).equal(source.event.title, 'ID события должен соответствовать ID события в комментарии');\r",
							"});\r",
							"\r",
							"pm.test(\"Данные в ответе должны соответствовать данным в запросе Комментарий\", function () {\r",
							"    pm.expect(target.text).equal(pm.collectionVariables.get(\"newCommentText\"), 'Комментарий содержит обновленный текст');\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
